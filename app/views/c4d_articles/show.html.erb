          <a id='c4d_show_check' class='c4d_grid_check' href='' style="<%= c4d_style_visible('check', @user, @c4d_article) %>;" title='Remove from toolkit' data-toggle='tooltip'><i class="fa fa-check" aria-hidden="true"></i></a>
