<% if @c4d_article %>
<div id="cgi_c4d_article_show_page" class='col-md-12'>
  <!-- row 1 -->
  <div id="cgi_c4d_article_show_header" class='row' style='background-color:<%= @c4d_article.c4d_category.color %> ;'>
    <div id='c4d_category_and_article_title' class='col-md-12 text-center' style='background-color:<%= @c4d_article.c4d_category.color %> ;'><%= @c4d_article.c4d_category.title %>&nbsp;-&nbsp;<%= @c4d_article.title %></div>
    <div id='c4d_close_icon' class='text-right'><a href='/c4d/'>CLOSE&nbsp;<i class="fa fa-remove" aria-hidden="true"></i></a></div>
  </div>
  <!-- row 2 -->
  <div id='cgi_c4d_article_all_content' class='row'>
    <!-- col 1 -->
    <div class='col-md-3'>
      <div id="cgi_c4d_article_show_info_column_content">
        <div id='cgi_show_info_column_content_links'>
          <% if !@c4d_related_topics.empty? %>
            <div id='cgi_related_topics_div' class='col-md-12'>
              <div id='related_topics_header' class='row text-left'>
                JUMP TO:
              </div>
              <div id="related_topics_list">
                <% @c4d_related_topics.each do |article| %>
                  <div id='related_topic_link_div' class='col-md-12'>
                    <div id='related_topic_link_div_text' class='col-md-10'>
                      <a id='<%= article.id %>' href='/c4d_articles/<%= article.id %>' class="black_text"><%= article.title %></a>
                    </div>
                    <div id='related_topic_link_div_icon' class='col-md-2'>
                      <a id='<%= article.id %>' href='/c4d_articles/<%= article.id %>' class="black_text"><i class="fa fa-angle-right fa-2x" aria-hidden="true"></i></a>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
          <% if !@c4d_article.reference_links.empty? %>
          <div id='cgi_c4d_show_references'>
              <div id='cgi_references_header' class='row'>REFERENCES:</div>
            <% @c4d_article.reference_links.each do |link| %>
              <div class='row'>
                <div class='col-md-2'>
                <img id='cgi_reference_link_pdf_icon' src='/assets/reference_icons/icon-doc-pdf.png'/>
                </div>
                <div id='cgi_reference_link_div' class='col-md-10'>
                  <a href='<%= link.url %>' target='_blank'><%= link.document_file_name.upcase.gsub(/(.PDF|_)/, ' ') %></a>
                </div>
              </div>
            <% end %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
    <div id='cgi_c4d_article_show_table' class='col-md-9'>
      <div class='row'>
        <div class='c4d_email_icon'>
          <a id='cgi_c4d_email_icon_link' href=''><i class="fa fa-envelope" aria-hidden="true"></i></a>
        </div>
        <div class='c4d_print_icon'>
          <a id='cgi_c4d_print_icon_link' href=''><i class="fa fa-print" aria-hidden="true"></i></a>
        </div>
<!--         <div id="<%= @c4d_article.id %>" class='text-center'>
