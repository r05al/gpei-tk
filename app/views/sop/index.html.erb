<%= render 'dashboard/nav' %>
<div id='sop_filter_container' class='container-fluid'>
  <!-- filters -->
  <div class='row text-center'>
    <div id='select_filter_text' class='col-md-9'>
      <em>Please select the filters you would like to use</em>
    </div>
    <div id='filter_clear_all' class='col-md-2'>
      <em>Clear All</em>
    </div>
  </div>
  <div class='container-fluid'>
    <div class='row'>
      <div id='filter_list' class='col-md-4'>
        <div class='sop_filter_header'>TIME</div>
        <div class='sop_checkboxes'>
          <ul class='list-unstyled text-uppercase'>
            <% @sop_times.each do |time| %>
              <li class='filter-item'><label><input class='check_box' id=<%= time.period.gsub(' ', '_') %> type='checkbox' value=".<%= time.period.gsub(' ', '_') %>"> <%= time.period %></label></li>
            <% end %>
          </ul>
        </div>
      </div>
      <div id='filter_list' class='col-md-4'>
        <div class='sop_filter_header'>CATEGORY</div>
        <div class='sop_checkboxes'>
          <ul class='list-unstyled text-uppercase'>
            <% @sop_categories.each do |category| %>
              <li class='filter-item'><label><input class='check_box' id=<%= category.title.gsub(' ', '_') %> type='checkbox' value=".<%= category.title.gsub(' ', '_') %>"> <%= category.title %></label></li>
            <% end %>
          </ul>
        </div>
      </div>
      <div id='filter_list' class='col-md-4'>
        <div class='sop_filter_header'>RESPONSIBILITY</div>
        <div class='sop_checkboxes'>
          <ul class='list-unstyled text-uppercase' style='height:100%'>
            <% @offices.each do |office| %>
              <li class='filter-item'><label><input class='check_box' id=<%= office.title.gsub(' ', '_') %> type='checkbox' value=".<%= office.title.gsub(' ', '_') %>"> <%= office.title %></label></li>
            <% end %>
            <br>
            <br>
            <br>
            <li class='filter-item' style='margin-bottom:2px'><label></label></li>
          </ul>
        </div>
      </div>
    </div>
  <!-- checklist -->
