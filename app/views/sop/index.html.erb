    <div class='text-center'>
      <h3 id='sop_checklist_header' class='img-rounded'>SOP Checklist</h3>
      <ul id='sop_checklist' class='list-unstyled'>
        <#% @user.sop_checklist.sop_articles.each do |article| %>
        <li id='checklist_article'><#%= article.title %></li>
        <#% end %>
      </ul>
    </div>
  </div> -->
  </div>
  <div class='container-fluid col-md-12'>
    <div class='row text-center'>
      <div id='isotope_container'>
        <% @sop_articles.each do |article| %>
          <div class="<%= build_classes({item: 'item', times: @sop_times[article.sop_time_id - 1].period.gsub(' ', '_'), offices: @offices[article.responsibility_id - 1].title.gsub(' ', '_'), categories: @sop_categories[article.sop_category_id - 1].title.gsub(' ', '_')}) %>"
            style=<%='background-color:' + @sop_times[article.sop_time_id - 1].color + ';' %>>
            <p id='grid_item_time_period'><%= @sop_times[article.sop_time_id - 1].period %></p>
            <p id='grid_item_icon'>icon</p>
            <p id='grid_item_article_title'><%= article.title %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div id='sop_filter' class='list-unstyled text-center'></div>
</div>
