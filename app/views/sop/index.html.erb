  </div>
  <div class='col-md-12'>
    <div class='row text-center' style="padding-left:40px;">
      <div id='isotope_container'>
        <% @sop_articles.each do |article| %>
          <%= link_to sop_article_path(article), {:style=>'color:#FFFFFF;'} do %>
          <div id="grid_tile_<%= article.title %>" class="<%= build_classes({item: 'item', time: article.sop_time.period.gsub(' ', '_'), offices: article.responsibility.title.gsub(' ', '_'), category: article.sop_category.title.gsub(' ', '_')}) %>"
            style=<%='background-color:' + article.sop_time.color + ';' %>>
            <p id='grid_item_time_period'><%= article.sop_time.period %><span id='sop_article_id' style='visibility:hidden;'><%= article.id %></span></p>
            <p id='grid_item_icon'>icon</p>
            <p id='grid_item_article_title'><%= article.title %></p>
            <a class='grid_add' href='#' style="top:5px;right:5px;position:absolute;<%= style_visible('add', @user, article) %>;color:black;"><i class="fa fa-plus" aria-hidden="true"></i></a>
            <a class='grid_check' href='#' style="top:5px;right:5px;position:absolute;<%= style_visible('check', @user, article) %>;color:black;"><i class="fa fa-check" aria-hidden="true"></i></a>
          </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
